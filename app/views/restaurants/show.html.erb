<h1> <%= @restaurant.name %></h1>

<ul>
  <li> <%= @restaurant.address %></li>
  <li> <%= @restaurant.phone_number %></li>
  <li> <%= @restaurant.category %></li>
</ul>

<h2>Reviews</h2>
<%= link_to 'add a review', new_restaurant_review_path(@restaurant) %>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li> <%= review.content%>  <%= review.rating%></li>
  <% end %>
</ul>

<%= link_to 'Back to list', restaurants_path, class: "btn btn-primary" %>
